---
import Layout from "@/layouts/Layout.astro";

import AboutMe from "@/components/AboutMe.astro";
import Badge from "@/components/Badge.astro";
import Briefcase from "@/components/icons/Briefcase.astro";
import CodeIcon from "@/components/icons/Code.astro";
import Experience from "@/components/Experience.astro";
import GitHubIcon from "@/components/icons/GitHub.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import MailIcon from "@/components/icons/Mail.astro";
import ProfileCheck from "@/components/icons/ProfileCheck.astro";
import Projects from "@/components/Projects.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import SocialPill from "@/components/SocialPill.astro";
import SocialPillRedirect from "@/components/SocialPillRedirect.astro";
import Bento from "@/components/Bento.astro";
import Trayectoria from "@/components/icons/Trayectoria.astro";
import Grid from "@/components/Grid.astro";
---

<Layout
  title="Porfolio de Sergio Mendez"
  description="Porfolio de Sergio Mendez"
>
  <main class="px-4">
    <SectionContainer id="contacto" class="py-32 pb-32">
      <img
        class="rounded-full size-16 mb-4"
        src="/sergio.webp"
        alt="sergio photo"
      />
      <h1
        class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
      >
        Hey, mi nombre es Sergio <a
          href="https://www.linkedin.com/in/sergio-mendez-soler-03902aa5/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center hover:scale-105 transition"
        >
        </a>
      </h1>
      <h2
        class="text-xl lg:text-2xl text-balance max-w-[700px] text-black dark:text-white"
      >
        <span>Estudiante de DAM.</span>
        <span class="text-yellow-800 dark:text-yellow-200">
          Conocimientos de Frontend utilizando React, así como de Backend con
          Java y Spring Boot
        </span>
        .<span class="text-red-800 dark:text-red-200"> De Murcia, España</span>.
        <span class="text-sky-800 dark:text-sky-200"
          >Siempre explorando diferentes tecnologías y lenguajes.</span
        >
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/sergio-mendez-soler-03902aa5/"
        >
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/sergiomsrs">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:sergiomsrs@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          sergiomsrs@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <Trayectoria class="size-7" />
        Mi Trayectoria
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="proyectos">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
      <Projects
        title="React Component - Formulario dinámico de extensión variable."
        description="Formulario diseñado desde cero con React para la elaboración de planes nutricionales y de entrenamiento. Sigue una estructura de bloques e ítems que se pueden añadir o eliminar a gusto del usuario. Especialmente diseñado para poder implementar el análisis estadístico de los planes elaborados."
      />
      <Bento />
      <Projects
        title="Training App - Diseño de planes de entrenamiento"
        description="Desarrollo en proceso de una página web en la que aplico los conocimientos adquiridos en los últimos años. Se trata de una aplicación para la creación y gestión de entrenamientos. La web está construida con React e integra una API REST desarrollada con Java, Spring Boot y MySQL para la gestión de usuarios. También incluye otra API REST que utiliza MongoDB para la gestión de entrenamientos y el análisis de datos."
      />
      <Grid/>
      <SocialPillRedirect href="/proyecto">Saber mas</SocialPillRedirect>
    </SectionContainer>

    <SectionContainer id="sobre-mi">
      <h2
        class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80"
      >
        <ProfileCheck class="size-7" />
        Sobre mi
      </h2>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
